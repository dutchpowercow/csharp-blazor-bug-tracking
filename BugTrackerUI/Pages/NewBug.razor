@page "/new-bug"

<h3>Add New Bug</h3>

<EditForm Model="AddBug">
    <InputText @bind-Value="@AddBug.Title" placehoder="Enter title"></InputText>
    <InputText @bind-Value="@AddBug.Description" placehoder="Enter description"></InputText>
    <InputNumber @bind-Value="@AddBug.Priority" placehoder="Enter priority"></InputNumber>

    <button type="submit">Add Bug</button>
</EditForm>

@code {
    public Bug AddBug { get; set; } = new Bug();
}
